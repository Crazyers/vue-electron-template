{
  "author": "Muhammad Ubaid Raza <mubaidr@gmail.com>",
  "bugs": {
    "url": "https://github.com/mubaidr/vue-electron-template/issues"
  },
  "build": {
    "appId": "org.mubaidr.vue-electron-template",
    "directories": {
      "output": "build"
    },
    "dmg": {
      "contents": [
        {
          "path": "/Applications",
          "type": "link",
          "x": 410,
          "y": 150
        },
        {
          "type": "file",
          "x": 130,
          "y": 150
        }
      ]
    },
    "files": [
      "dist/electron/**/*"
    ],
    "linux": {
      "icon": "build/icons",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "publish": [
        "github"
      ]
    },
    "productName": "productName",
    "win": {
      "icon": "build/icons/icon.ico",
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "bulma-fluent": "^0.3.10",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "description": "An electron-vue project",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.5",
    "electron-builder": "^20.26.0",
    "electron-debug": "^2.0.0",
    "electron-rebuild": "^1.8.1",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-vue": "^4.7.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "vue-devtools": "^4.1.4"
  },
  "license": "MIT",
  "main": "./dist/electron/main.js",
  "name": "vue-electron-template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mubaidr/vue-electron-template.git"
  },
  "scripts": {
    "build": "run-s pack electron-builder",
    "build:dir": "run-s pack electron-builder --dir",
    "build:linux": "run-s pack electron-builder --linux",
    "build:mac": "run-s pack electron-builder --mac",
    "build:win": "run-s pack electron-builder --win",
    "build:win-app": "run-s pack electron-builder",
    "dev": "npm run pack:dev",
    "lint": "eslint --ext .js,.vue src test",
    "lint:fix": "eslint --ext .js,.vue --fix src test",
    "pack": "run-p pack:main pack:renderer",
    "pack:dev": "run-s pack:renderer:dev pack:main:dev",
    "pack:main": "parcel build src/main/index.js --target node --out-dir dist/electron --out-file main.js --no-source-maps",
    "pack:main:dev": "node parcel-dev-script.js",
    "pack:renderer": "parcel build src/renderer/index.html --target electron --out-dir dist/electron --out-file index.html --no-source-maps",
    "pack:renderer:dev": "parcel serve src/renderer/index.html --target electron --out-dir dist/electron --out-file index.html --no-source-maps --port 1234",
    "postinstall": "npm rebuild && electron-builder install-app-deps && electron-rebuild",
    "release": "build"
  },
  "version": "0.0.1"
}
